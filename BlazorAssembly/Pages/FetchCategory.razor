@page "/category"

@using Share.Enums

<div class="d-flex justify-content-between">
    <h3>Category</h3>
    <a href="/create" class="btn btn-success">ThÃªm</a>

</div>

@if (Categories == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="categorySearch" OnSubmit="SearchForm">
        <div class="row">
            <div class="col">
                <label>Name</label>
                <InputText class="form-control" @bind-Value="categorySearch.Name"></InputText>
            </div>
            <div class="col">
                <label>Priority</label>
                <InputSelect class="form-control" @bind-Value="categorySearch.Priority">
                        <option value="">Select priority</option>

                    @foreach (var item in Enum.GetNames(typeof(Priority)))
                    {
                        <option value="@item">@item</option>
                    }
                </InputSelect>
            </div>

            <div class="col d-flex align-items-end">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>

        </div>
    </EditForm>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DisplayOrder</th>
                <th>Priority</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Categories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>@item.Priority</td>
                    <td><a href="/detail/@item.Id">Detail</a></td>
                </tr>
            }
        </tbody>
    </table>
}

